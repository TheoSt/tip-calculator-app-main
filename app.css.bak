body {
    margin:0;
    font-family:'Space Mono', monospace;
    background-color:hsl(185, 41%, 84%);
}

main {
    min-height:100vh;
    display:flex;
    justify-content:center;
} 

#container {
    width:20rem;
    height:85vh;
}

#calculator {
    border-radius:15px;
    background-color:hsl(0, 0%, 100%);
    display:flex;
    flex-direction: column;
}

h1 {
    text-align:center;
    text-transform:uppercase;
    letter-spacing: 5px;
    color:hsl(186, 14%, 43%);
    font-size:1.5rem;
    margin-bottom:2%;
}

#filters {
    width:90%;
    margin:0 auto;
    padding-top:2%;
}

#results {
    width:90%;
    margin:20% auto;
    background-color:hsl(183, 100%, 15%);
    border-radius:15px;
    color:white;
}

#filters label {
    font-size:0.8rem;
    font-weight:700;
}

#filters h5 {
    margin-bottom:0;
}

#tip-selection {
    margin-top:5%;
}

input {
    border:none;
    background-color:hsl(180, 17%, 94%);
    width:95%;
    height:2rem;
    color:hsl(183, 100%, 15%);
    font-size:1.5rem;
    font-weight: 700;
    text-align:right;
}

input::-webkit-inner-spin-button, input::-webkit-outer-spin-button {
    appearance: none;
    margin:0;
}

#bill-input {
    background-image:url("images/icon-dollar.svg");
    background-repeat:no-repeat;
    background-position: 3%;
    margin-top:2%;
}

#people-input {
    background-image:url("images/icon-person.svg");
    background-repeat:no-repeat;
    background-position: 3%;
    margin-top:2%;
}

#custom-input {
    font-size:1rem;
    padding:2% 0;
    width:40%;
    text-align:center;
}



#people-section {
    width:100%;
}

#people-section span{
    font-weight:700;
    font-size:0.8rem;
    float:left;
}

#people-section #error-message {
    display:none;
    margin:0 2% 0 0;
    font-size:0.6rem;
    float:right;
}

#people-section .error-people {
    display:inline !important;
    float:right;
    font-weight: 700;
    color:hsl(39, 92%, 45%);
}

#tip-selection {
    display:flex;
    justify-content: space-between;
    flex-wrap: wrap;
    width:100%;
}

button {
    border:none;
    border-radius:5px;
    font-weight:700;
    letter-spacing:1px;
    font-family:'Space Mono', monospace;
}

#tip-selection button {
    color:white;
    background-color:hsl(183, 100%, 15%);  
    width:40%;
    font-size:1.2rem;
    padding:2% 0;
    margin-bottom:4%;   
}

#tip-selection button:hover {
    cursor:pointer;
    color:hsl(183, 100%, 15%);
    background-color:hsl(185, 41%, 84%) !important;
}

.result-div{
    width:90%;
    margin:0 auto;
    display:flex;
    justify-content: space-between;
    letter-spacing: 2px;
}

.result-div h2 {
    font-size:1.7rem;
    color:hsl(172, 67%, 45%);
}

.result-div h5 {
    margin-bottom:0.5rem;
}

.result-div p {
    color:hsl(180, 4%, 75%);
    font-size:0.6rem;
}

#reset-btn {
    width:90%;
    display:block;
    margin:1rem auto;
    text-transform: uppercase;
    background-color:hsl(172, 67%, 45%);
    color:hsl(183, 100%, 15%);
    font-weight: 700;
    font-size:1rem;
    padding:2% 0;
}

#reset-btn:hover {
    cursor:pointer;
    background-color:hsl(185, 41%, 84%);
}

footer {
	color: hsl(183, 100%, 15%);
	text-align:center;
	font-size:0.9rem;
	font-weight:700;
	letter-spacing:1px;
	margin-bottom:2%;
}
footer a {
	text-decoration:none;
	color:hsl(180, 17%, 94%);
}


@media screen and (min-width:768px) {
    main {
        align-items:center;
    }
    
    #container {
        width:50rem;
        height:65vh;
    }
    
    #calculator {
        flex-direction: row;
        justify-content: space-evenly;
    }
    
    #filters {
        width:40%;
        margin:5% 0;
    }
    
    #results {
        width:40%;
        margin:5% 0;
    }

    #tip-selection button {
        width:30%; 
    }

    #custom-input {
        font-size:1rem;
        width:30%;
    }  

    #people-section #error-message {
        font-size:0.7rem;
        margin:0 4% 0 0;
    }

    #reset-btn {
        margin-top:25%;
    }
	
	footer {
		font-size:1.2rem;
	}
}